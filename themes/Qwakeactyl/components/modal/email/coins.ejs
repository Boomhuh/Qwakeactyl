<style>
  .modal-backdrop {
    z-index: -1;
  }
</style>
<div
  class="modal modal-rel fade"
  id="coins_email"
  tabindex="-1"
  aria-labelledby="coins_emailLabel"
  aria-hidden="true"
  data-backdrop="false"
  role="dialog"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="coins_emailLabel">
          Coins management by email
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div>
          <div class="form-group mb-20">
            <p>
              <label for="name">Email:</label>
              <input
                name="name"
                type="text"
                id="email"
                class="form-control"
                placeholder="Enter email here"
              />
              <label>Coins:</label>
              <input class="form-control" id="setcoins_coins" />
            </p>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            class="btn btn-success"
            onclick="asyncAlert(setCoins_email(document.getElementById('email').value, parseFloat(document.getElementById('setcoins_coins').value), true))"
          >
            Add
          </button>
          <button
            class="btn btn-success"
            onclick="asyncAlert(setCoins_email(document.getElementById('email').value, parseFloat(document.getElementById('setcoins_coins').value)))"
          >
            Set
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
