<style>
  .modal-backdrop {
    z-index: -1;
  }
</style>
<div
  class="modal modal-rel fade"
  id="blacklist_email"
  tabindex="-1"
  aria-labelledby="blacklist_emailLabel"
  aria-hidden="true"
  data-backdrop="false"
  role="dialog"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="blacklist_emailLabel">
          Blacklist By Email
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div>
          <div class="form-group mb-20">
            <p>
              <label for="name">Email:</label>
              <input
                name="name"
                type="text"
                id="email"
                class="form-control"
                placeholder="Enter email here"
              />
            </p>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            class="btn btn-primary"
            onclick="asyncAlert(userinfo_email(document.getElementById('email').value))"
            data-bs-dismiss="modal"
          >
            Get Info
          </button>
          <button
            class="btn btn-success"
            onclick="asyncAlert(blacklistUser_email(document.getElementById('email').value))"
            data-bs-dismiss="modal"
          >
            Blacklist
          </button>
          <button
            class="btn btn-danger"
            onclick="asyncAlert(unblacklistUser_email(document.getElementById('email').value))"
            data-bs-dismiss="modal"
          >
            Unblacklist
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
