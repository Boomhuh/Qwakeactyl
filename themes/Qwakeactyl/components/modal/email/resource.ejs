<style>
  .modal-backdrop {
    z-index: -1;
  }
</style>
<div
  class="modal modal-rel fade"
  id="resource_email"
  tabindex="-1"
  aria-labelledby="resource_emailLabel"
  aria-hidden="true"
  data-backdrop="false"
  role="dialog"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="resource_emailLabel">
          Resource management by email
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div>
          <div class="form-group mb-20">
            <p>
              <label for="name">Email:</label>
              <input
                name="name"
                type="text"
                id="email"
                class="form-control"
                placeholder="Enter email here"
              />
              <label>Memory:</label>
              <input class="form-control" id="setresources_memory" />
              <label>Disk:</label>
              <input class="form-control" id="setresources_disk" />
              <label>CPU:</label>
              <input class="form-control" id="setresources_cpu" />
              <label>Servers:</label>
              <input class="form-control" id="setresources_servers" />
            </p>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Close
          </button>
          <button
            class="btn btn-success"
            data-bs-dismiss="modal"
            onclick="asyncAlert(setResources_email(document.getElementById('email').value, parseFloat(document.getElementById('setresources_memory').value), parseFloat(document.getElementById('setresources_disk').value), parseFloat(document.getElementById('setresources_cpu').value), parseFloat(document.getElementById('setresources_servers').value), true))"
          >
            Add
          </button>
          <button
            class="btn btn-success"
            data-bs-dismiss="modal"
            onclick="asyncAlert(setResources_email(document.getElementById('email').value, parseFloat(document.getElementById('setresources_memory').value), parseFloat(document.getElementById('setresources_disk').value), parseFloat(document.getElementById('setresources_cpu').value), parseFloat(document.getElementById('setresources_servers').value)))"
          >
            Set
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
